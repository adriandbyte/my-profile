---
import CSS from '../components/icons/CSS.astro';
import Git from '../components/icons/Git.astro';
import HTML from '../components/icons/HTML.astro';
import Javascript from '../components/icons/Javascript.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import React from '../components/icons/React.astro';
import ReactQuery from '../components/icons/ReactQuery.astro';
import Tailwind from '../components/icons/Tailwind.astro';
import Typescript from '../components/icons/Typescript.astro';
import Layout from '../layouts/Layout.astro';
import Zod from '../components/icons/Zod.astro';
import Copilot from '../components/icons/Copilot.astro';
import PNPM from '../components/icons/PNPM.astro';
import Vim from '../components/icons/Vim.astro';
import Warp from '../components/icons/Warp.astro';
import AstroIcon from '../components/icons/AstroIcon.astro';
import VisualCode from '../components/icons/VisualCode.astro';
import NextJS from '../components/icons/NextJS.astro';
import SVGL from '../components/icons/SVGL.astro';
---

<Layout title="Welcome to my profile.">
  <main
    class="w-100 h-screen m-5 min-w-[250px] md:grid md:grid-cols-2 md:gap-2 md:grid-rows-4
    lg:px-20 lg:max-w-5xl lg:mx-auto"
  >
    <section class="profile-img md:row-span-2">
      <img
        src="/profile.jpeg"
        alt="Pilon"
        class="w-full h-100 rounded-2xl md:h-full"
      />
    </section>
    <section
      class="about-me mt-4 flex flex-col rounded-2xl text-white border-2 border-slate-400/10 p-4 md:row-span-2 md:mt-0"
    >
      <h1 class="m-4 text-4xl italic font-bold">About me.</h1>
      <h2 class="text-2xl italic">ðŸ‘‹ Hi my name is Adrian Dominguez</h2>

      <p class="m-2 text-xl">I am an experienced Frontend web developer.</p>

      <p class="m-2 text-xl">
        I am also very passionate about technology and programming with more
        than 7 years of experience developing web applications, enthusiastic
        about self-study and learning new technologies.
      </p>
    </section>
    <section class="rounded-xl mt-4 md:mt-0">
      <img
        alt="Hacker Gif"
        src="/hacker.gif"
        class="rounded-xl w-full max-h-80 md:max-h-full"
      />
    </section>
    <section
      class="flex flex-wrap justify-center items-center
text-white border-2 border-slate-400/10 p-4 rounded-xl h-100 self-center h-56 mt-4 gap-1 md:gap-4 lg:gap-6"
    >
      <LinkedIn
        class="w-10 h-10 transform transition-transform duration-300 hover:scale-110"
      />
      <Git
        class="w-10 h-10 transform transition-transform duration-300 hover:scale-110"
      />
      <React
        class="w-10 h-10 transform transition-transform duration-300 hover:scale-110"
      />
      <CSS
        class="w-10 h-10 transform transition-transform duration-300 hover:scale-110"
      />
      <HTML
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <Javascript
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <ReactQuery
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <Tailwind
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <Typescript
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <Zod
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <Copilot
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <PNPM
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <Vim
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <Warp
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <AstroIcon
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <NextJS
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <VisualCode
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
      <SVGL
        class="h-10 w-10 transform transition-transform duration-300 hover:scale-110"
      />
    </section>
  </main>
</Layout>
